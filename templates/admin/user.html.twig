{% extends '@!EasyAdmin/layout.html.twig' %}

{% block main %}
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><strong>Utilisateur</strong></h3>
        <a href="{{ editUrl }}" class="btn btn-white mb-3">Éditer le profil</a>
    </div>
    
    <hr class="my-4">

    <div class="row">
      <div class="col-lg-3">
        <div class="card mb-4">
          <div class="card-body text-center">
                <div class="d-flex justify-content-center">
                    <div class="position-relative" style="width: 150px; height: 150px;">
                        <!-- Avatar -->
                        <div class="rounded-circle overflow-hidden w-100 h-100 border">
                            <img id="avatarPreview"
                                src="{{ user.imageName ? asset('uploads/users/' ~ user.imageName) : asset('images/default-avatar.png') }}"
                                alt="avatar"
                                class="w-100 h-100"
                                style="object-fit: cover;">
                        </div>
                        <!-- Bouton d’édition -->
                        <a href="{{ editUrl }}" class="btn btn-sm btn-white rounded-circle position-absolute bottom-0 end-0 border" title="Changer la photo de profil">
                            <i class="fas fa-camera"></i>
                        </a>
                    </div>
                </div>

            <h5 class="my-3">{{ user.firstname }} {{ user.lastname }}</h5>
            {% for role in user.roleLabels %}
                <p class="text-muted mb-1">{{ role }}</p>
            {% endfor %}
           
          </div>
        </div>

        <div class="card mb-4 ">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <p class="mb-0">Inscrit le :</p>
                <p class="mb-0">{{ user.createdAt|date('d/m/Y H:i') }}</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <p class="mb-0">Mis à jour le :</p>
                <p class="mb-0">{{ user.updatedAt|date('d/m/Y H:i') }}</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
            {% if user.isParentOfs|length > 0 %}
                <p class="mb-0 p-3 border-bottom">Parent de :</p>
            {% for relation in user.isParentOfs %}
                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <p class="mb-0">{{ relation.child.firstname }} {{ relation.child.lastname }}</p>
                    <a href="{{ ea_url()
                        .setController('App\\Controller\\Admin\\UserCrudController')
                        .setAction('show')
                        .setEntityId(relation.child.id)
                    }}" class="btn btn-primary btn-sm">Voir</a>
                </li>
            {% endfor %}
            {% endif %}

            {% if user.isChildOfs|length > 0 %}
                <p class="mb-0 p-3 border-bottom">Enfant de :</p>
            {% for relation in user.isChildOfs %}
                
                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <p class="mb-0">{{ relation.user.firstname }} {{ relation.user.lastname }}</p>
                    <a href="{{ ea_url()
                        .setController('App\\Controller\\Admin\\UserCrudController')
                        .setAction('show')
                        .setEntityId(relation.user.id)
                    }}" class="btn btn-primary btn-sm">Voir</a>
                </li>
            {% endfor %}
            {% endif %}
            </ul>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
            {% if user.player %}
                <p class="mb-0 p-3 border-bottom">Joueur dans :</p>
                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <p class="mb-0">{{ user.player.playsInTeam.name }}</p>
                    <a href="{{ ea_url()
                        .setController('App\\Controller\\Admin\\TeamCrudController')
                        .setAction('show')
                        .setEntityId(user.player.playsInTeam.id)
                    }}" class="btn btn-primary btn-sm">Voir</a>
            {% endif %}
            </ul>
          </div>
        </div>

      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Prénom et Nom</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ user.firstname }} {{ user.lastname }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ user.email }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Tél</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ user.phone ? user.phone : 'Non renseigné' }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Date de naissance</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ user.birthdate ? user.birthdate|date('d/m/Y') : 'Non renseignée' }}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Addresse</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"></p>
              </div>
            </div>
          </div>
        </div>
        
          {# Si l'utilisateur est un joueur, afficher les statistiques #}
        {% if user.player %}
          {% include 'admin/components/playerStats.html.twig' %}
        {% endif %}

       


          
            
      </div>
    </div>



    



{% endblock %}